<?xml version="1.0" encoding="utf-8"?><!-- This linear layout contains a single item displayed in the MainActivity -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="170dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:elevation="3dp"
    card_view:cardCornerRadius="4dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">



        <TextView
            android:id="@+id/note_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_light"
            tools:text="Name" />

        <!-- Line behind the title -->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/note_description"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_light"
            tools:text="Description. Lorem ipsum dolor sit amet consectetur adipiscing, elit cubilia nam eu odio fringilla platea, imperdiet donec nascetur nisi eleifend. Scelerisque nisl nostra eu in montes vestibulum ad hendrerit, mauris nam cubilia torquent interdum pellentesque pulvinar sem curabitur" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        <TextView
            android:id="@+id/note_update_at"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_light"
            android:gravity="right"
            tools:text="12/12/2012" />


    </LinearLayout>
</android.support.v7.widget.CardView>


